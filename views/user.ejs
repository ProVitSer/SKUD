                                                            <input type="time" class="form-control" id="hoursWorked">
                                                        </div>
                                                    </div>
                                                </div>



                                                <div class="row">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="MonTime">Пн</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="TueTime">Вт</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="WedTime">Ср</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="ThuTime">Чт</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="FriTime">Пт</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="SatTime">Сб</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="form-check form-check-flat">
                                                                <label class="form-check-label">
                                                          <input type="checkbox" class="form-check-input" id="SunTime">Вс</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Общие праздники</label>
                                                    <input type="holiday" class="form-control" id="inputHolidayTime" placeholder="01.01-10.01,23.02">
                                                </div>


                                                <div class="form-group">
                                                    <label for="exampleFormControlSelect1">Закрывать рабочий день после задержки на Х часов</label>
                                                    <select class="form-control form-control-lg" id="selectCloseWorkDayBefore">
                                                    <option>0</option>
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    </select>
                                                </div>


                                                <p class="card-description"> Перерыв в часах </p>

                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <div class="form-group">
                                                            <label for="time">C</label>
                                                            <input type="time" class="form-control" id="startBreak">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6">

                                                        <div class="form-group">
                                                            <label for="time">До</label>
                                                            <input type="time" class="form-control" id="endBreak">
                                                        </div>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-success mr-2">Сохранить</button>
